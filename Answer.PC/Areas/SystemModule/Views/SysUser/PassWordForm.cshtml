@{
    ViewBag.Title = "个人中心-修改密码";
    Layout = "~/Views/Shared/_Form.cshtml";
}
@*@Html.AppendCssFile("/Areas/SystemModule/Content/SysUser_PassWordForm.css")*@
<link href="~/Areas/SystemModule/Content/SysUser_PassWordForm.css" rel="stylesheet" />
    <div id="ll_layout" class="ll-layout ll-layout-left-center">

        <div class="ll-layout-center">
            <div class="ll-layout-wrap">
                <div class="ll-layout-wrap-item active" id="ll_layout_item1">
                    <div class="title">
                        <div>修改密码</div>
                    </div>
                    <div class="content" style="padding-top:20px;">

                        <div class="ll-form-wrap" id="form">
                            <div class="ll-form-item-text">
                                为了保护您的帐号安全，操作前请您进行安全验证
                            </div>
                            <div class="ll-form-item">
                                <div class="ll-form-item-title">旧密码<font face="宋体">*</font></div>
                                <input id="OldPassword" type="password" class="form-control" isvalid="yes" checkexpession="NotNull" />
                                <div class="tip"></div>
                            </div>
                            <div class="ll-form-item">
                                <div class="ll-form-item-title">新密码<font face="宋体">*</font></div>
                                <input id="NewPassword" type="password" class="form-control" isvalid="yes" checkexpession="NotNull" />
                                <div class="tip"></div>
                            </div>
                            <div class=" ll-form-item">
                                <div class="ll-form-item-title">重复新密码<font face="宋体">*</font></div>
                                <input id="RedoNewPassword" type="password" class="form-control" isvalid="yes" checkexpession="NotNull" />
                                <div class="tip"></div>
                            </div>
                            <div class="ll-form-item">
                                <div class="ll-form-item-title">验证码<font face="宋体">*</font></div>
                                <input id="Verifycode" maxlength="4" type="text" class="form-control" isvalid="yes" checkexpession="NotNull">
                                <div>
                                    <img id="Verifycode_img" src="/SystemModule/SysUser/VerifyCode" alt="点击切换验证码" title="点击切换验证码" />
                                </div>
                            </div>
                            <div class="ll-form-item"><a class="btn btn-primary" id="ll_save_btn"><i class="fa fa-save"></i>&nbsp;提&nbsp;交</a></div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
    @*@Html.AppendJsFile("/Areas/SystemModule/Content/SysUser_PassWordForm.js")*@
<script src="~/Areas/SystemModule/Content/SysUser_PassWordForm.js"></script>