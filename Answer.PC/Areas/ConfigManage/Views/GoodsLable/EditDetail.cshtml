
@{
    ViewBag.Title = "EditDetail";
    Layout = "~/Views/Shared/_CustmerFormPreview.cshtml";
}

<div class="ll-form-wrap" id="form">
    <input type="hidden" id="id" value="@Model.id" />
    <input type="hidden" id="parentID" value="@Model.parentID" />

    <div class="col-xs-12 ll-form-item">
        <div class="ll-form-item-title">名称：<font face="宋体">*</font></div>
        <input id="lable" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" value="@Model.lable" />
    </div>
</div>

<script type="text/javascript">

    var acceptClick;

    var bootstrap = function ($, luoluo) {
        "use strict";
        // 保存数据
        acceptClick = function (callBack) {
            if ($.lrValidCustmerform()==false) {
                return false;
            }
            //if ($.trim($("#lable").val()) == "") {
            //    tipshow("名称不能为空", true);
            //    return false;
            //}
            var data = {
                id: $("#id").val(),
                parentID: $.trim($("#parentID").val()),
                lable: $.trim($("#lable").val()),
            }

            //lrPostForm
            $.llSaveForm(top.$.rootUrl + "/configManage/goodslable/SaveLableDetail", data, function (res) {
                // 保存成功后才回调
                if (!!callBack) {
                    callBack();
                }
            });
        };
    }
</script>