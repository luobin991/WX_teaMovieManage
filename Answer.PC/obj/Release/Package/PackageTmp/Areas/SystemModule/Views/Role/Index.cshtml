
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="ll-layout">
    <div class="ll-layout-center">
        <div class="ll-layout-wrap ll-layout-wrap-notitle">
            <div class="ll-layout-tool">
                <div class="ll-layout-tool-left">
                    <div class="ll-layout-tool-item">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" />
                    </div>
                    <div class="ll-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;查询</a>
                    </div>
                </div>
                <div class="ll-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="ll_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" luoluo-authorize="yes">
                        <a id="ll_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="ll_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="ll_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="ll_more" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-reorder"></i>&nbsp;更多<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li id="ll_memberadd"><a><i></i>&nbsp;添加成员</a></li>
                            <li id="ll_memberlook"><a><i></i>&nbsp;查看成员</a></li>
                            <li id="ll_authorize"><a><i></i>&nbsp;功能授权</a></li>
                        </ul>
                    </div>

                    <div class="btn-group btn-group-sm" luoluo-authorize="yes">
                        <a id="ll_appfilter" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-filter"></i>&nbsp;访问过滤<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li id="ll_ipfilter"><a><i></i>&nbsp;IP过滤</a></li>
                            <li id="ll_timefilter"><a><i></i>&nbsp;时段过滤</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="ll-layout-body" id="girdtable"></div>
        </div>
    </div>
</div>
