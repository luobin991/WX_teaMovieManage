
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<style>
    #girdtable img{
        max-width:50px;
        height:50px;
        margin-bottom:2px;
        margin-top:-15%;
    }
    #girdtable .jfgrid-data-cell{
        height:52px;
        padding-top:2%;
    }

</style>
<div id="lr_layout" class="ll-layout ll-layout-left-center">
    <div class="ll-layout-left">
        <div class="ll-layout-wrap ll-layout-wrap-notitle" style="padding-top:10px;">
            <div class="ll-layout-body">

                <div class="btn-group-sm" luoluo-authorize="no" style="text-align:center;padding-bottom:10px;">
                    <a id="ll_add_menu" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                    <a id="ll_edit_menu" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                    <a id="ll_del_menu" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                </div>

                <ul class="ll-left-list" id="lr_left_list">
                    <li class="active" data-value="0">-- ALL --</li>
                </ul>

            </div>
        </div>
    </div>
    <div class="ll-layout-center">
        <div class="ll-layout-wrap ll-layout-wrap-notitle">
            <div class="ll-layout-tool">
                <div class="ll-layout-tool-left">
                    <div class="ll-layout-tool-item">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" />
                    </div>
                    <div class="ll-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;查询</a>
                    </div>
                </div>
                <div class="ll-layout-tool-right">
                    <div class="btn-group btn-group-sm">
                        <a id="ll_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class="btn-group btn-group-sm" luoluo-authorize="no">
                        <a id="ll_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="ll_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;修改</a>
                        <a id="ll_more" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-reorder"></i>&nbsp;更多<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li id="ll_lable"><a>&nbsp;设置标签</a></li>
                            <li id="ll_enabled"><a>&nbsp;启用/有货</a></li>
                            <li id="ll_disabled"><a>&nbsp;禁用/售空</a></li>
                            <li id="ll_del"><a>&nbsp;删除</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="ll-layout-body" id="girdtable">123</div>

        </div>
    </div>
</div>
