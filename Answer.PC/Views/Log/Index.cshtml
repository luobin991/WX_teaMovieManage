@{
    ViewBag.Title = "日志管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div id="lr_layout" class="ll-layout ll-layout-left-center">
    <div class="ll-layout-left">
        <div class="ll-layout-wrap ll-layout-wrap-notitle" style="padding-top:10px;">
            <div class="ll-layout-body">
                <ul class="ll-left-list" id="lr_left_list">
                    <li class="active" data-value="1">登录日志</li>
                    <li data-value="2">访问日志</li>
                    <li data-value="3">操作日志</li>
                    <li data-value="4">异常日志</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="ll-layout-center">
        <div class="ll-layout-wrap ll-layout-wrap-notitle">
            <div class="ll-layout-tool">
                <div class="ll-layout-tool-left">
                    <div class="ll-layout-tool-item">
                        <div id="datesearch"></div>
                    </div>
                    <div class="ll-layout-tool-item">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" />
                    </div>
                    <div class="ll-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;查询</a>
                    </div>
                    </div>
                <div class="ll-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="lr_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
            
                    <div class=" btn-group btn-group-sm" luoluo-authorize="yes">
                        <a id="lr_detail" class="btn btn-default"><i class="fa fa-file-text"></i>&nbsp;详细</a>
                        <a id="lr_removelog" class="btn btn-default"><i class="fa fa-eraser"></i>&nbsp;清空</a>
                        <a id="lr_export" class="btn btn-default"><i class="fa fa-sign-out"></i>&nbsp;导出</a>
                    </div>
                </div>
            </div>

            <div class="ll-layout-body" id="gridtable">
            </div>
        </div>
    </div>
</div>
